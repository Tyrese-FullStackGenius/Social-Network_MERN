{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "consistent-return": "warn",
    "no-undef": "off",
    "no-use-before-define": ["error", { "variables": false }],
    "implicit-arrow-linebreak": "off",
    "react/prefer-stateless-function": "warn",
    "react/jsx-filename-extension": 0
  }
}
